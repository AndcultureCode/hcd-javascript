{
    "name": "@rsm-hcd/javascript-testing",
    "description": "Commonly used actors for automated testing javascript applications",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "devDependencies": {
        "@faker-js/faker": "^7.3.0",
        "@swc/core": "^1.3.92",
        "@types/jest": "^29.5.5",
        "@types/node": "^18.18.0",
        "@types/rosie": "^0.0.43",
        "axios": "^1.5.1",
        "cross-env": "^7.0.3",
        "immutable": "^4.3.4",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-extended": "^4.0.1",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "rosie": "^2.1.0",
        "ts-jest": "^29.1.1",
        "tsup": "^7.2.0",
        "typedoc": "^0.25.1",
        "tsconfig": "workspace:*",
        "typedoc-config": "workspace:*",
        "typescript": "^5.2.2"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "JavaScript",
        "Node"
    ],
    "license": "MIT",
    "peerDependencies": {
        "@faker-js/faker": "^7.3.0",
        "axios": "^1.5.1",
        "immutable": "^4.3.4",
        "jest": "^29.7.0",
        "rosie": "^2.1.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsm-hcd/hcd-javascript.git"
    },
    "scripts": {
        "build": "tsup ./src/index.ts --format=cjs,esm --dts-resolve --minify --clean --sourcemap --treeshake --shims",
        "clean": "rimraf dist && rimraf coverage",
        "coverage": "jest ./src --coverage",
        "dev": "tsc --watch",
        "docs": "typedoc",
        "format": "prettier --write \"src/**/*.ts\" --trailing-comma es5",
        "postbuild": "pnpm run docs",
        "postpublish": "cross-env-shell \"git add -A && git commit -m \"$npm_package_version\" && git push origin main\"",
        "prebuild": "pnpm run clean && npm run format && echo Using TypeScript && tsc --version",
        "prepublishOnly": "pnpm run build",
        "test": "jest ./src",
        "test:watch": "jest ./src --watch"
    }
}
