{
    "name": "@rsm-hcd/javascript-testing",
    "version": "1.1.0",
    "description": "Commonly used actors for automated testing javascript applications",
    "publishConfig": {
        "directory": "dist"
    },
    "main": "./index.js",
    "module": "./index.mjs",
    "types": "./index.d.ts",
    "exports": {
        ".": {
            "require": "./index.js",
            "import": "./index.mjs",
            "types": "./index.d.ts"
        }
    },
    "devDependencies": {
        "@faker-js/faker": "^8.1.0",
        "@rsm-hcd/scripts": "workspace:*",
        "@rsm-hcd/tsconfig": "workspace:*",
        "@rsm-hcd/typedoc-config": "workspace:*",
        "@swc/core": "^1.3.92",
        "@types/jest": "^29.5.5",
        "@types/rosie": "^0.0.43",
        "axios": "^1.5.1",
        "cross-env": "^7.0.3",
        "immutable": "^4.3.4",
        "jest-environment-jsdom": "^29.7.0",
        "jest-extended": "^4.0.1",
        "jest": "^29.7.0",
        "prettier": "^3.0.3",
        "rimraf": "^5.0.5",
        "rosie": "^2.1.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsup": "^7.2.0",
        "typescript": "^5.2.2"
    },
    "keywords": [
        "JavaScript",
        "Node"
    ],
    "license": "MIT",
    "peerDependencies": {
        "@faker-js/faker": "^8.1.0",
        "axios": "^1.5.1",
        "immutable": "^4.3.4",
        "jest": "^29.7.0",
        "rosie": "^2.1.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsm-hcd/hcd-javascript.git"
    },
    "scripts": {
        "build": "tsup ./src/index.ts --format=cjs,esm --dts --minify --clean --sourcemap --treeshake --shims",
        "clean": "rimraf dist && rimraf coverage",
        "coverage": "jest ./src --coverage",
        "dev": "pnpm run build --watch",
        "format": "prettier --write \"src/**/*.ts\" --trailing-comma es5",
        "prebuild": "pnpm run clean && echo Using TypeScript && tsc --version",
        "prepare-packagejson": "ts-node ./node_modules/@rsm-hcd/scripts/prepare-package.ts package.json ./dist/package.json @rsm-hcd/tsconfig,@rsm-hcd/scripts,@rsm-hcd/typedoc-config",
        "copy-readme": "ts-node ./node_modules/@rsm-hcd/scripts/copy-readme.ts",
        "postbuild": "pnpm run prepare-packagejson && pnpm run copy-readme",
        "prepublishOnly": "pnpm run build",
        "test": "jest ./src",
        "test:watch": "jest ./src --watch"
    }
}
