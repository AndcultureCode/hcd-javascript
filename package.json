{
    "name": "rsm-hcd-javscript",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rsm-hcd/hcd-javscript.git"
    },
    "scripts": {
        "build": "turbo run build",
        "build:prod": "turbo run build:prod",
        "dev": "turbo run dev",
        "test": "turbo run test",
        "test:watch": "turbo run test -- --watch",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "publish-packages": "turbo run build:prod lint test && changeset version && changeset publish",
        "prepare": "pnpm husky install"
    },
    "devDependencies": {
        "@changesets/cli": "^2.26.2",
        "@rsm-hcd/tsconfig": "workspace:*",
        "eslint": "^8.51.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.1",
        "prettier": "^3.0.3",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.8.0",
    "volta": {
        "node": "18.18.0",
        "pnpm": "8.8.0"
    },
    "lint-staged": {
        "*.{ts,tsx,md}": "prettier --write"
    }
}
